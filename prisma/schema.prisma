generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  student
  team_leader
  professor
  admin
}

enum TaskStatus {
  to_do
  in_progress
  done
  archived
}

enum TaskPriority {
  low
  medium
  high
}

enum InviteStatus {
  pending
  accepted
  declined
}

enum ProjectStatus {
  active
  completed
  archived
}

enum ProjectType {
  individual
  group
}

enum NotificationType {
  // Invite-related
  invite_accepted
  invite_declined
  invite_received
  // Task-related
  task_assigned
  task_completed
  task_status_changed
  task_due_approaching
  task_overdue
  // Project-related
  project_deadline_approaching
  project_completed
  removed_from_project
  // Team-related
  member_joined
  member_left
  // Professor-related
  announcement_posted
  project_graded
  submission_status_changed
  review_posted
  // New notification types
  project_status_changed
  project_created
  project_ready_for_submission
  deadline_missed
}

enum GradeType {
  numeric
  letter
}

enum SubmissionStatus {
  draft
  submitted
  approved
  needs_revision
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  fullName     String    @map("full_name")
  role         UserRole  @default(student)
  avatarUrl   String?   @map("avatar_url")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  lastLoginAt DateTime? @map("last_login_at")
  deletedAt   DateTime? @map("deleted_at")

  sessions               Session[]
  ledProjects            Project[]       @relation("TeamLeader")
  projectMembers         ProjectUser[]   @relation("Member")
  invitesSent            ProjectUser[]   @relation("InvitedBy")
  assignedTasks          Task[]          @relation("Assignee")
  createdTasks           Task[]          @relation("TaskCreator")
  taskChanges            TaskHistory[]
  uploadedFiles          File[]
  comments               Comment[]
  activityLogs           ActivityLog[]
  notificationsReceived  Notification[]  @relation("NotificationRecipient")
  notificationsTriggered Notification[]  @relation("NotificationActor")

  // Course relations
  coursesTaught          Course[]             @relation("CourseProfessor")
  courseEnrollments      CourseEnrollment[]   @relation("StudentEnrollments")

  // Professor feature relations
  gradesGiven            ProjectGrade[]       @relation("GradedBy")
  submissionsCreated     FinalSubmission[]    @relation("SubmittedBy")
  submissionsReviewed    FinalSubmission[]    @relation("ReviewedBy")
  projectReviews         ProjectReview[]      @relation("ReviewAuthor")
  announcements          Announcement[]       @relation("AnnouncementAuthor")
  submissionFiles        FinalSubmissionFile[] @relation("SubmissionUploader")

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  userAgent String?  @map("user_agent")
  ip        String?
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")
  revoked   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Project {
  id           String        @id @default(uuid())
  title        String
  description  String?
  courseCode   String?       @map("course_code")
  courseId     String?       @map("course_id")
  projectType  ProjectType   @default(group) @map("project_type")
  teamLeaderId String        @map("team_leader_id")
  status       ProjectStatus @default(active)
  deadlineDate DateTime?     @map("deadline_date")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  deletedAt    DateTime?     @map("deleted_at")

  teamLeader      User             @relation("TeamLeader", fields: [teamLeaderId], references: [id])
  course          Course?          @relation(fields: [courseId], references: [id])
  members         ProjectUser[]
  tasks           Task[]
  notifications   Notification[]
  grade           ProjectGrade?
  finalSubmission FinalSubmission?
  reviews         ProjectReview[]

  @@map("projects")
}

model ProjectUser {
  id           String       @id @default(uuid())
  projectId    String       @map("project_id")
  userId       String       @map("user_id")
  role         UserRole     @default(student)
  invitedById  String?      @map("invited_by")
  inviteStatus InviteStatus @default(pending) @map("invite_status")
  joinedAt     DateTime?    @map("joined_at")

  project   Project @relation(fields: [projectId], references: [id])
  user      User    @relation("Member", fields: [userId], references: [id])
  invitedBy User?   @relation("InvitedBy", fields: [invitedById], references: [id])

  @@unique([projectId, userId])
  @@map("project_user")
}

model Task {
  id          String       @id @default(uuid())
  projectId   String       @map("project_id")
  title       String
  description String?
  priority    TaskPriority @default(medium)
  status      TaskStatus   @default(to_do)
  assigneeId  String?      @map("assignee_id")
  ordinal     Int          @default(0)
  createdById String       @map("created_by")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  dueDate     DateTime?    @map("due_date")
  isDeleted   Boolean      @default(false) @map("is_deleted")
  deletedAt   DateTime?    @map("deleted_at")

  project       Project        @relation(fields: [projectId], references: [id])
  assignee      User?          @relation("Assignee", fields: [assigneeId], references: [id])
  createdBy     User           @relation("TaskCreator", fields: [createdById], references: [id])
  history       TaskHistory[]
  files         File[]
  comments      Comment[]
  notifications Notification[]

  @@map("tasks")
}

model TaskHistory {
  id               String      @id @default(uuid())
  taskId           String      @map("task_id")
  changedById      String      @map("changed_by")
  previousStatus   TaskStatus? @map("previous_status")
  newStatus        TaskStatus? @map("new_status")
  previousAssignee String?     @map("previous_assignee")
  newAssignee      String?     @map("new_assignee")
  comment          String?
  createdAt        DateTime    @default(now()) @map("created_at")

  task      Task @relation(fields: [taskId], references: [id])
  changedBy User @relation(fields: [changedById], references: [id])

  @@map("task_history")
}

model File {
  id         String   @id @default(uuid())
  taskId     String   @map("task_id")
  uploadedBy String   @map("uploaded_by")
  filename   String
  s3Key      String?  @map("s3_key")
  sizeBytes  BigInt   @map("size_bytes")
  mimeType   String?  @map("mime_type")
  createdAt  DateTime @default(now()) @map("created_at")

  task   Task @relation(fields: [taskId], references: [id])
  uploader User @relation(fields: [uploadedBy], references: [id])

  @@map("files")
}

model Comment {
  id        String   @id @default(uuid())
  taskId    String   @map("task_id")
  authorId  String   @map("author_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  task   Task @relation(fields: [taskId], references: [id])
  author User @relation(fields: [authorId], references: [id])

  @@map("comments")
}

model ActivityLog {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  action       String
  resourceType String?  @map("resource_type")
  resourceId   String?  @map("resource_id")
  details      Json?
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false) @map("is_read")

  // Related entities (optional, for navigation)
  projectId String?          @map("project_id")
  taskId    String?          @map("task_id")
  actorId   String?          @map("actor_id")

  // Metadata for additional context
  metadata  Json?

  createdAt DateTime         @default(now()) @map("created_at")
  readAt    DateTime?        @map("read_at")

  user    User     @relation("NotificationRecipient", fields: [userId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])
  task    Task?    @relation(fields: [taskId], references: [id])
  actor   User?    @relation("NotificationActor", fields: [actorId], references: [id])

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("notifications")
}

// ============================================
// PROFESSOR FEATURES
// ============================================

model Course {
  id              String   @id @default(uuid())
  title           String
  code            String   @unique
  description     String?
  semester        String   // Fall, Spring, Summer
  year            Int
  professorId     String   @map("professor_id")
  isActive        Boolean  @default(true) @map("is_active")
  projectsEnabled Boolean  @default(true) @map("projects_enabled")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  professor     User               @relation("CourseProfessor", fields: [professorId], references: [id])
  enrollments   CourseEnrollment[]
  projects      Project[]
  announcements Announcement[]

  @@map("courses")
}

model CourseEnrollment {
  id         String   @id @default(uuid())
  courseId   String   @map("course_id")
  studentId  String   @map("student_id")
  enrolledAt DateTime @default(now()) @map("enrolled_at")

  course  Course @relation(fields: [courseId], references: [id])
  student User   @relation("StudentEnrollments", fields: [studentId], references: [id])

  @@unique([courseId, studentId])
  @@map("course_enrollments")
}

model ProjectGrade {
  id           String    @id @default(uuid())
  projectId    String    @unique @map("project_id")
  professorId  String    @map("professor_id")
  gradeType    GradeType @map("grade_type")
  numericGrade Int?      @map("numeric_grade")
  letterGrade  String?   @map("letter_grade")
  feedback     String?
  gradedAt     DateTime  @default(now()) @map("graded_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  project   Project @relation(fields: [projectId], references: [id])
  professor User    @relation("GradedBy", fields: [professorId], references: [id])

  @@map("project_grades")
}

model FinalSubmission {
  id            String           @id @default(uuid())
  projectId     String           @unique @map("project_id")
  description   String
  status        SubmissionStatus @default(draft)
  submittedAt   DateTime?        @map("submitted_at")
  submittedById String?          @map("submitted_by_id")
  reviewedAt    DateTime?        @map("reviewed_at")
  reviewedById  String?          @map("reviewed_by_id")
  reviewComment String?          @map("review_comment")
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")

  project     Project               @relation(fields: [projectId], references: [id])
  submittedBy User?                 @relation("SubmittedBy", fields: [submittedById], references: [id])
  reviewedBy  User?                 @relation("ReviewedBy", fields: [reviewedById], references: [id])
  files       FinalSubmissionFile[]

  @@map("final_submissions")
}

model FinalSubmissionFile {
  id           String   @id @default(uuid())
  submissionId String   @map("submission_id")
  filename     String
  filepath     String
  sizeBytes    BigInt   @map("size_bytes")
  mimeType     String?  @map("mime_type")
  uploadedBy   String   @map("uploaded_by")
  createdAt    DateTime @default(now()) @map("created_at")

  submission FinalSubmission @relation(fields: [submissionId], references: [id])
  uploader   User            @relation("SubmissionUploader", fields: [uploadedBy], references: [id])

  @@map("final_submission_files")
}

model ProjectReview {
  id          String   @id @default(uuid())
  projectId   String   @map("project_id")
  professorId String   @map("professor_id")
  content     String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project   Project @relation(fields: [projectId], references: [id])
  professor User    @relation("ReviewAuthor", fields: [professorId], references: [id])

  @@map("project_reviews")
}

model Announcement {
  id          String   @id @default(uuid())
  courseId    String   @map("course_id")
  professorId String   @map("professor_id")
  title       String
  content     String
  isPinned    Boolean  @default(false) @map("is_pinned")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  course    Course @relation(fields: [courseId], references: [id])
  professor User   @relation("AnnouncementAuthor", fields: [professorId], references: [id])

  @@map("announcements")
}
